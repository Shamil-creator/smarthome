# SmartHome Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED: Telegram Bot Configuration
# ===========================================
# Your Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# WebApp URL (public HTTPS URL where the frontend is hosted)
# For local development, use ngrok: ngrok http 8080
WEBAPP_URL=https://your-webapp-url.com

# ===========================================
# OPTIONAL: Backend Configuration
# ===========================================
# API URL for the bot to communicate with backend
API_URL=http://backend:5000/api

# Flask environment (development or production)
FLASK_ENV=production

# ===========================================
# OPTIONAL: Security Configuration
# ===========================================
# Allowed CORS origins (comma-separated)
# Example: https://example1.com,https://example2.com
ALLOWED_ORIGINS=

# Skip auth validation - ONLY for local development without Telegram
# NEVER set to true in production!
SKIP_AUTH_VALIDATION=false

# Rate limiting (requests per minute)
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_AUTH=10
