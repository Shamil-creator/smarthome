# Telegram Bot Token
BOT_TOKEN=TOKEN

# WebApp URL (для Telegram Mini App)
# Для локальной разработки используйте ngrok: ngrok http 3000
# Затем скопируйте https URL сюда
WEBAPP_URL=URL

# API URL (для фронтенда)
# Для локальной разработки: оставьте пустым или не указывайте (будет использован Vite proxy)
# Для Docker: http://backend:5000/api
# Для продакшена: https://your-api-domain.com/api
# VITE_API_URL=

# Gemini API Key (для генерации отчетов)
GEMINI_API_KEY=your_gemini_api_key_here
SKIP_AUTH_VALIDATION=true
API_URL=http://localhost:5001/api
